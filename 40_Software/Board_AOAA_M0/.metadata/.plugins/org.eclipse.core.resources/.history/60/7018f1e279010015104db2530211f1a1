#include "can_handler.h"
#include "can.h"

void can_handler_init()
{
	CAN_Init( ((2) << 12)  	 |		//BRP
			  ((3) << 8) 	 |	 	//SJW
			  ((0) << 6)   	 |		//TSEG1
			  ((1)) 				//TSEG2
			);			//set baud rate of 500kbps
	CAN_ConfigureMessages();	//configure all CAN message buffers
}

void can_handler_send(uint32_t msg_id, uint32_t dlc, uint32_t *data )
{
	uint8_t msg_no=1;
	uint8_t received_flag=0;

	uint32_t *msg_ptr = (uint32_t*) malloc(10*sizeof(uint32_t));

	*msg_ptr++ = msg_id;
	*msg_ptr++ = dlc;
	*msg_ptr++ = *data++;
	*msg_ptr++ = *data++;
	*msg_ptr++ = *data++;
	*msg_ptr++ = *data++;
	*msg_ptr++ = *data++;
	*msg_ptr++ = *data++;
	*msg_ptr++ = *data++;
	*msg_ptr++ = *data++;


	CAN_Send(msg_no, received_flag, msg_ptr );

	free(msg_ptr);

}
void can_handler_receive()
{

}
void CAN_IRQHandler()
{

}

